# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# LLM provider (openai | anthropic)
DEFAULT_LLM_PROVIDER=openai

# Puppeteer
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
# Optional: explicit browser executable (Chrome/Edge/Chromium)
# PUPPETEER_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# MCP server identity
MCP_SERVER_NAME=jshhookmcp
MCP_SERVER_VERSION=0.1.0

# Tool registration mode
# - MCP_TOOL_PROFILE=minimal|full
# - MCP_TOOL_DOMAINS=browser,debugger,network,maintenance,core,hooks,process
# If MCP_TOOL_DOMAINS is set, it overrides MCP_TOOL_PROFILE.
# MCP_TOOL_PROFILE=minimal

# Logging
LOG_LEVEL=info

# Cache
ENABLE_CACHE=true
CACHE_DIR=.cache
CACHE_TTL=3600

# Performance
MAX_CONCURRENT_ANALYSIS=3
MAX_CODE_SIZE_MB=10

# CAPTCHA fallback screenshots
CAPTCHA_SCREENSHOT_DIR=./screenshots

# Screenshot output root (always constrained inside project root)
# MCP_SCREENSHOT_DIR=./screenshots/manual
